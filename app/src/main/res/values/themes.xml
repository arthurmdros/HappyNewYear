<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HappyNewYear" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryLight</item>
        <item name="colorOnPrimary">@color/colorPrimaryDark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryText</item>
        <item name="colorSecondaryVariant">@color/colorDivider</item>
        <item name="colorOnSecondary">@color/colorLightGreen</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.Splash" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
            <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>
</resources>